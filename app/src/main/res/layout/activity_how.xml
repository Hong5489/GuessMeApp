<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="guessmypic.gmp.HowActivity"
    android:background="@color/white">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="HOW TO PLAY"
        android:id="@+id/textView3"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess the thing according to the picture "
        android:id="@+id/textView4"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type in your answer using the letters button below"
        android:id="@+id/textView5"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView7" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="STEP 1"
        android:id="@+id/textView6"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:background="@drawable/buttonclick"
        android:textAlignment="center"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="STEP 2"
        android:id="@+id/textView7"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:background="@drawable/buttonclick"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="STEP 3"
        android:id="@+id/textView8"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:background="@drawable/buttonclick"
        android:textAlignment="center"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can buy Hint for a letter with 100 coins "
        android:id="@+id/textView9"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true" />
</RelativeLayout>
